<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <settings>
        <setting name="logImpl" value="LOG4J"/>
        <setting name="mapUnderscoreToCamelCase" value="true"/>
    </settings>
    <typeAliases>
        <typeAlias type="com.circle.pojo.User" alias="User"/>
        <typeAlias type="com.circle.pojo.Article" alias="Article"/>
    </typeAliases>
    <mappers>
        <mapper class="com.circle.dao.UserMapper"/>
        <mapper class="com.circle.dao.ArticleMapper"/>
    </mappers>
</configuration>